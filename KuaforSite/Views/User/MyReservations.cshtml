@model List<ReservationsForUserVM>
@{
    ViewData["Title"] = "MyReservations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="bg-dark text-light p-4">Randevularım</h3>
<table class="table table-dark table-bordered table-striped ">
    <thead>
        <tr>
            <th class="txt-soft-light">Kuaför</th>
            <th class="txt-soft-light">Çalışan</th>
            <th class="txt-soft-light">Hizmetler</th>
            <th class="txt-soft-light">Tarih</th>
            <th class="txt-soft-light">Saat</th>
            <th class="txt-soft-light">Ücret</th>
            <th class="txt-soft-light">Durum</th>
            <th class="txt-soft-light"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var reservation in Model){
            <tr>
                <td>@reservation.HairdresserName</td>
                <td>@reservation.EmployeeName</td>
                <td>@reservation.Services</td>
                <td>@reservation.Date.ToShortDateString()</td>
                <td>@reservation.Time</td>
                <td>@reservation.Money ₺</td>
                <td>@reservation.Status</td>
                <td>@reservation.Reason</td>
            </tr>
        }
    </tbody>
</table>

