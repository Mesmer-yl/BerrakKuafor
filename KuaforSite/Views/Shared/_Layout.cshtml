<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KuaforSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KuaforSite.styles.css" asp-append-version="true" />
</head>
<body class="bg-secondary">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3 p-4">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><span class="text-light">OktayMurvet</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1 w-100 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-white-50" asp-area="" asp-controller="Home" asp-action="Index">Ana sayfa</a>
                        </li>
                        @if (User.IsInRole("Moderatör") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white-50" asp-area="Panel" asp-controller="Home" asp-action="Index">Panel</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a asp-area="" asp-controller="User" asp-action="MyReservations" class="nav-link text-white-50">Randevularım</a>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link text-white-50 text-decoration-underline">Hoş geldiniz, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50" asp-area="" asp-controller="Authentication" asp-action="LogOut">Çıkış yap</a>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item">
                                <a class="nav-link text-white-50" asp-area="" asp-controller="Authentication" asp-action="SignIn">Giriş yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white-50" asp-area="" asp-controller="Authentication" asp-action="SignUp">Kayıt ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            <ul class="list-unstyled w-100 d-md-flex m-0 justify-content-between ">
                <li class="text-center">
                    &copy; @DateTime.Now.Year - <span class="text-light">OktayMurvet</span>, Tüm hakları saklıdır
                </li>
                <li class="text-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-underline text-white-50">Yapay zeka aracımızı denediniz mi?</a>
                </li>
            </ul>
             
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
