@model LoginVM
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Giriş yap</h1>
@if (TempData["SuccessRegister"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessRegister"]
    </div>
}
<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
</div>
<form class="form" method="post" asp-controller="Authentication" asp-action="SignIn">

    <div class="form-group">
        <label class="form-label" asp-for="Email" for="Email"></label>
        <input class="form-control" type="email" asp-for="Email" placeholder="Email adresiniz..."/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Password" for="Password"></label>
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="form-control btn btn-primary">Giriş yap</button>
    </div>

</form>

