@model List<UsersWithRoleVM>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<h5>Kullanıcı İşlemleri > <strong class="text-decoration-underline">Kullanıcılar</strong></h5>
<span class="page-title-line"></span>
<div class="panel-card">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    İsim - Soyisim
                </th>
                <th>
                    Email
                </th>
                <th>
                    GSM No
                </th>
                <th>
                    Rol
                </th>
                <th>
                    İşlemler
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userModel in Model)
            {
                <tr>
                    <td>
                        @userModel.NameSurname
                    </td>
                    <td>
                        @userModel.Email
                    </td>
                    <td>
                        @userModel.PhoneNumber
                    </td>
                    <td>
                        @userModel.RoleName
                    </td>
                    <td>
                        <a asp-area="Panel" asp-controller="UserOperations" asp-action="UpdateUser" asp-route-userId="@userModel.Id" class="btn purple-soft">
                            Düzenle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>