@model UserUpdateByModVM
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<h5>Kullanıcı İşlemleri > <strong class="text-decoration-underline">Kullanıcı Güncelleme</strong></h5>

<span class="page-title-line"></span>
<div class="panel-card">

    @if (TempData["UpdateUserMessage"] != null)
    {
        <div class="alert alert-info" role="alert">
            @TempData["UpdateUserMessage"]
        </div>
    }
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
    </div>
    <form method="post" asp-area="Panel" asp-controller="UserOperations" asp-action="UpdateUser">
        <div class="form-group">
            <label class="form-label" asp-for="NameSurname" for="NameSurname"></label>
            <input class="form-control" asp-for="NameSurname" />
            <span asp-validation-for="NameSurname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Email" for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="PhoneNumber" for="PhoneNumber"></label>
            <input class="form-control" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="">
            <input hidden class="form-control" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="RoleId" for="RoleId" class="form-label"></label>
            <select asp-for="RoleId" class="form-control">
                @foreach (var role in Model.Roles)
                {
                    if (role.Id == Model.RoleId)
                    {
                        <option value="@role.Id" selected>@role.Name</option>
                    }
                    else
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
        <div class="form-group border-0">
            <button class="btn purple-soft form-control" type="submit">Kaydet</button>
        </div>
    </form>

</div>